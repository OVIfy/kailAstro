---
 interface Props{
    title : string,
    content: Array<string>,
    listType?: 'disc' | 'number',
    ContType?: 'section' | 'div',
    HeadingType? : 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
 }
 const {title, content, listType = 'disc', ContType = 'section', HeadingType = 'h1'} = Astro.props
 let list
 switch (listType) {
    case 'disc':
        list = 'list-disc'  
        break;
    case 'number':
        list = 'list-decimal'
        break;
    default:
        break;
 }
---
<ContType>
    <HeadingType class="text-[8px] tracking-[-0.12px] font-semibold leading-[6.6px] md:text-[17px] md:leading-[22px]">{title}</HeadingType>
    <ul class:list={["list-inside mt-[2px] text-[8px] md:text-[15px]", list]}>
        {content.map((item)=> <li class=" leading-4 text-gra md:leading-[40px]">{item}</li>)}
    </ul>
</ContType>