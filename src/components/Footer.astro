---
interface Prop{
    leftText? : string,
    leftUrl? : string,
    rightText? : string,
    rightUrl? : string
}


const {leftText, leftUrl, rightText, rightUrl} = Astro.props
---

<footer>
    <div class="pt-6 pl-4 pr-4 pb-[40px] md:pt-8 md:pr-8 md:pl-18 md:pb-0  lg:pt-[63px] lg:pr-36 lg:pl-36 lg:pb-0">
        {rightText && leftText && <div class="flex justify-between  ">
            {rightText && <a href={rightUrl}><div class="flex items-center gap-1">
                <img class="w-[12px] inline-block" src="/images/arrow.png" alt="Next icon">
                <p>{rightText}</p>
            </div></a>}

            {leftText && <a href={leftUrl}><div class="flex items-center justify-end gap-1">
                <p>{leftText}</p>
                <img class="w-[12px] inline-block rotate-180" src="/images/arrow.png" alt="Next icon">
            </div></a>}
        </div>}
       
        {leftText && !rightText &&
            <div class="flex">
                <a href={leftUrl}><div class="flex items-center gap-1">
                    <img class="w-[12px] inline-block rotate-180" src="/images/arrowr.png" alt="Next icon">
                    <p>{leftText}</p>
                </div></a>
            </div>
        }

        {rightText && !leftText &&
            <div class="flex justify-end">
                <a href={rightUrl}><div class="flex items-center gap-1">
                    <p>{rightText}</p>
                    <img class="w-[12px] inline-block" src="/images/arrowr.png" alt="Next icon">
                </div></a>
            </div>
        }

    </div>

    <div class="bg-black p-[8px] text-white">
        <p class="text-center text-[8px] md:text-[11px] md:p-[27px]">Copyright @ 2022 Designed by Kamil Zamani. All rights reserved.</p>
    </div>
</footer>